# Master service configuration

service auth {
  unix_listener auth-client {
    path = auth-client
    mode = 0660
    user = Debian-exim
    group = mail
  }

  unix_listener auth-master {
    path = auth-master
    mode = 0600
    user = mail
  }

  service-count = 0
  process-min-avail = 0
}

service log {
  unix_listener log-master-access {
    path = log-master-access
    mode = 0600
    user = mail
  }
}

